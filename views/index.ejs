<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Lista de personas</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center">Lista de personas</h1>

    <!--primer lista de productos-->
    <ul class="mt-6">
      <% for (const persona of personas) { %>
        <li class="flex items-center p-4 border-bottom shadow-sm">
          <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-400 text-center p-1">
            <span class="text-white font-bold">
              <%= persona.nombre[0] %>
            </span>
          </div>

          <div class="ml-4 flex flex-col">
            <span class="text-lg font-medium">
              <%= persona.nombre %>
                <%= persona.apellido %>
            </span>
            <span class="text-gray-500">Edad: <%= persona.edad %></span>
          </div>
        </li>
        <% } %>
    </ul>
  </div>

  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center">Lista de productos</h1>

    <!--segunda lista de productos-->
    <ul class="mt-6">
      <% for (const producto of productos) { %>
        <li class="flex items-center p-4 border-bottom shadow-sm">
          <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-400 text-center p-1">
            <span class="text-white font-bold">
              <%= producto.nombre[0] %>
            </span>
          </div>

          <div class="ml-4 flex flex-col">
            <span class="text-lg font-medium">
              <%= producto.nombre %>
                <%= producto.marca %>
            </span>
            <span class="text-gray-500">Precio: <%= producto.precio %></span>
          </div>
        </li>
        <% } %>
    </ul>
  </div>



</body>

</html>

